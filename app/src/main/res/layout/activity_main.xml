<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay estudiantes detectados aún."
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnConfirmNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar siguiente sin código"/>

    <Button
        android:id="@+id/btnStartAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start All"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnNewRoundAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Round"
        android:layout_marginTop="8dp"/>
</LinearLayout>
